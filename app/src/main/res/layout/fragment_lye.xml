<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/myview"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_action_alert_black" />

            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="There are no available liquid(s).\nClick the add button to add more liquids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/linear"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    
                    android:textSize="18sp"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/tvNumber"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    
                    android:maxLength="15"
                    android:textSize="18sp"
                    android:text="Ingredients"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/tvIngredients"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:id="@+id/tvPercentage"
                    android:text="% "
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    
                    android:textSize="18sp"
                    android:layout_marginEnd="3dp"
                    android:id="@+id/tvGrams"
                    android:text="0.0"
                    android:maxLength="6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    
                    android:textSize="18sp"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/tvNumber1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    
                    android:maxLength="15"
                    android:textSize="18sp"
                    android:text="Ingredients"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/tvIngredients1"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:id="@+id/tvPercentage1"
                    android:text="% "
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    
                    android:textSize="18sp"
                    android:layout_marginEnd="3dp"
                    android:id="@+id/tvGrams1"
                    android:text="0.0"
                    android:maxLength="6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/tvNumber2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    
                    android:maxLength="15"
                    android:textSize="18sp"
                    android:text="Ingredients"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:id="@+id/tvIngredients2"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:id="@+id/tvPercentage2"
                    android:text="% "
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    
                    android:textSize="18sp"
                    android:layout_marginEnd="3dp"
                    android:id="@+id/tvGrams2"
                    android:text="0.0"
                    android:maxLength="6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:background="@drawable/table_header_cell_bg"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:text="#"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@drawable/table_header_cell_bg"
                    android:textColor="@android:color/white"
                    android:maxLength="15"
                    android:textSize="18sp"
                    android:text="Liquid(s)"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@drawable/table_header_cell_bg"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    android:textSize="18sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:text="% "
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:background="@drawable/table_header_cell_bg"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginEnd="3dp"
                    android:text="grams"
                    android:maxLength="6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

            </TableRow>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:id="@+id/recyclerView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </HorizontalScrollView>

        <LinearLayout
            android:layout_margin="20dp"
            android:gravity="end"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:padding="5dp"
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_action_add" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>