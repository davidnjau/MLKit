<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/table_content_cell_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:gravity="center"
            android:id="@+id/tvOils"
            android:textColor="@android:color/white"
            android:background="@drawable/table_header_cell_bg"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Oils"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <ScrollView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:background="@drawable/table_content_cell_bg"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_weight="1"
                        android:text="NAOH required"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:background="@drawable/table_content_cell_bg"
                        android:maxLength="5"
                        android:id="@+id/tvNaoHRequired"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text=" 0 "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:background="@drawable/table_content_cell_bg"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text=" g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:background="@drawable/table_content_cell_bg"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_weight="1"
                        android:text="Total Oil Weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:background="@drawable/table_content_cell_bg"
                        android:maxLength="5"
                        android:id="@+id/tvTotalOilWeight"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text=" 0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:background="@drawable/table_content_cell_bg"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text=" g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </TableRow>


            </TableLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:background="@drawable/table_content_cell_bg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="Essential Oils"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TableLayout
                    android:background="@drawable/table_content_cell_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:text="Essential \nOil Name: "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:hint="Essential Oil Name"
                            android:id="@+id/etEssentiaOilName"
                            android:padding="5dp"
                            android:background="@drawable/edit_text_shape"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="NestedWeights" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:text="Essential \nOil Weight: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <EditText
                            android:hint="0 ~ 2"
                            android:id="@+id/etOilWeight"
                            android:maxLength="7"
                            android:inputType="numberDecimal"
                            android:padding="5dp"
                            android:background="@drawable/edit_text_shape"
                            android:layout_marginStart="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:layout_marginStart="5dp"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:text=" % of Total Soap Weight"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>


                    </TableRow>




                </TableLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btnCalculate"
                android:layout_margin="20dp"
                android:background="@drawable/rounded_button"
                android:padding="15dp"
                android:text="Calculate"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </ScrollView>





</LinearLayout>