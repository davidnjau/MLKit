<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoapTracker.Activities.Profile">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="370dp">

        <LinearLayout
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/nimo_logo"
                android:id="@+id/profile_image"
                android:onClick="chooseImage"
                app:civ_border_color="#BCffffff"
                app:civ_border_width="1dp" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_gravity="bottom"
            app:cardCornerRadius="10dp"
            android:layout_margin="20dp"
            app:cardElevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@android:color/black"
                        android:text="Soaps Prepared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvTotalSoaps"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:text="Healing Soaps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvHealing"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@android:color/black"
                        android:text="Cured Soaps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvCuredSoaps"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <TableLayout
        android:layout_below="@+id/frameLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgBtn"
                android:background="@drawable/icon_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:onClick="EditText"
                android:id="@+id/tvUsername"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:visibility="gone"
                android:onClick="EditText"
                android:id="@+id/etUsername"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </TableRow>

        <TableRow
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgBtnEmail"
                android:background="@drawable/icon_person_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvEmail"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:visibility="gone"
                android:onClick="EditText"
                android:id="@+id/etEmail"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgBtnPhone"
                android:background="@drawable/icon_person_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:onClick="EditText"
                android:text="+254716060198"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:visibility="gone"
                android:onClick="EditText"
                android:id="@+id/etPhoneNumber"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="@drawable/icon_person_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:onClick="EditText"
                android:id="@+id/tvSettings"
                android:text="Change my Settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </TableRow>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="@mipmap/ic_pic_ig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:onClick="EditText"
                android:layout_gravity="center"
                android:text="Your ig link"
                android:id="@+id/tvIgLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </TableLayout>

</RelativeLayout>