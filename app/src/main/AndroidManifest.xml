<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nimo.ten.mlkittest">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pic_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_pic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SoapTracker.Activities.SplashPage"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SoapTracker.Activities.SoapRecipe" />
        <activity android:name=".SoapTracker.Activities.Settings" />
        <activity
            android:name=".SoapTracker.Activities.Profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SoapTracker.Activities.AccountManagement"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".SoapTracker.Activities.Register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SoapTracker.Activities.Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SoapTracker.Activities.Calender"
            android:label="Curing Dates"
            android:parentActivityName=".SoapTracker.Activities.SoapHeal_Healing" />
        <activity
            android:name=".SoapTracker.Activities.SingleSoapDetails"
            android:parentActivityName=".SoapTracker.Activities.SoapHeal_Healing" />
        <activity
            android:name=".SoapTracker.Activities.Soap_ingredients_notes"
            android:parentActivityName=".SoapTracker.Activities.SingleSoapDetails" />
        <activity android:name=".SoapTracker.Activities.SoapHeal_Healing">

        </activity>
        <activity
            android:name=".SoapTracker.Activities.UploadSoapDetails"
            android:label="Upload an image"
            android:parentActivityName=".SoapTracker.Activities.SoapHeal_Healing" />

        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="label" />

        <service
            android:name=".SoapTracker.HelperClass.OfflineNotification"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver
            android:name=".SoapTracker.HelperClass.MyBroadCastReceiver"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".SoapTracker.HelperClass.MyService"
            android:enabled="true"
            android:exported="false"
            android:process=":remote" />
    </application>

</manifest>